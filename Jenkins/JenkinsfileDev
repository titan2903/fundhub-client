pipeline {
    agent {
        label 'sandbox'
    }

    environment {
        WEBOOK_DISCORD_URL = credentials('WEBOOK_DISCORD_URL')
        DOCKER_USERNAME = credentials('DOCKER_USERNAME')
        DOCKER_PASSWORD = credentials('DOCKER_PASSWORD')
    }

    stages {
        stage('Unit Test'){
            agent {
                docker {
                    image 'node:16-alpine'
                    label 'sandbox'
                }
            }

            steps {
                echo "Testing Fundhub client"
            }   
        }

        stage('Build') {
            steps {
                script {
                    writeFile file: '.env', text: 'ENV=staging'
                    sh "cat .env"
                    echo 'Building Apps'
                    sh "docker build -t $DOCKER_USERNAME/fundhub-client-dev:${BUILD_NUMBER} ."
                }
            }
        }

        stage('Push to Registry') {
             steps {
                echo "Pushing to Registry"
                sh "docker login -u $DOCKER_USERNAME -p ${DOCKER_PASSWORD}"
                sh "docker push $DOCKER_USERNAME/fundhub-client-dev:${BUILD_NUMBER}"
                sh 'docker rmi $(docker images -q)'
            }
        }
    }
    
    post {
        aborted {
            echo "Post Aborted"
            discordSend description: "Push Docker Image", footer: "Push image fundhub-client-dev:${BUILD_NUMBER} to Registry. Status: Aborted", link: env.BUILD_URL, result: currentBuild.currentResult, title: JOB_NAME, webhookURL: "$WEBOOK_DISCORD_URL"
        }

        success {
            echo "Post Success"
            discordSend description: "Push Docker Image", footer: "Push image fundhub-client-dev:${BUILD_NUMBER} to Registry. Status: Success", link: env.BUILD_URL, result: currentBuild.currentResult, title: JOB_NAME, webhookURL: "$WEBOOK_DISCORD_URL"
        }

        failure {
            echo "Post Failure"
            discordSend description: "Push Docker Image", footer: "Push image fundhub-client-dev:${BUILD_NUMBER} to Registry. Status: Failure", link: env.BUILD_URL, result: currentBuild.currentResult, title: JOB_NAME, webhookURL: "$WEBOOK_DISCORD_URL"
        }
    }
}